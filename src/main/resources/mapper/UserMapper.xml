<?xml version ="1.0" encoding ="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0// EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper and xml mapping -->
<mapper namespace="com.example.spring_boot_project.repository.UserMapper">

    <!-- Mapping definition (user) -->
    <resultMap type="com.example.spring_boot_project.entity.Employee" id="user">
        <id column="user_id" property="userId"/>
        <result column="password" property="password"/>
        <result column="user_name" property="userName"/>
        <result column="birthday" property="birthday"/>
        <result column="age" property="age"/>
        <result column="gender" property="gender"/>
        <result column="department_id" property="departmentId"/>
        <result column="role" property="role"/>
    </resultMap>

    <!-- user registration -->
    <insert id="insertOne">
        insert into m_user( user_id
                          , password
                          , user_name
                          , birthday
                          , age
                          , gender
                          , department_id
                          , role)
        values ( #{userId}
               , #{password}
               , #{userName}
               , #{birthday}
               , #{age}
               , #{gender}
               , #{departmentId}
               , #{role});
    </insert>

    <select id="findMany" resultType="UserMaster">
        select *
        from m_user;
    </select>

    <!-- Get user(1record) -->
    <select id="findOne" resultMap="user">
        select *
        from m_user
        where user_id = #{userId}
    </select>

    <update id="updateOne">
        update
            m_user
        set password  = #{user.password}
          , user_name = #{user.userName}
        where user_id = #{user.userId}
    </update>

</mapper>